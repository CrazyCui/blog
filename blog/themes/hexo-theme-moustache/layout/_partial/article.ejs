<div class="container">
  <div class="article" itemscope itemtype="http://schema.org/Article">
    <div class="post">
      <div class="bread">
        <a href="/">小胡子哥的个人博客</a> »
        <a href="/entry/">博客</a> »
        <%- partial('post/category', {post: page}) %>
      </div>
      <div class="post-title-wrapper">
        <h1 class="post-title" itemprop="name"><%= page.title %><img src="https://game.weixin.qq.com/cgi-bin/comm/qrcode?s=10&m=1&d=http:<%- config.url %><%- url_for(page.path) %>" alt="扫码分享" onerror="this.style.display='none';"></h1>
        <a href="<%- url_for('/about/') %>"><img src="<%- url_for(theme.imgs.avatar150) %>" alt="<%- config.author %>" /></a>
      </div>
      <div class="post-info">
        <span>作者: <a href="<%- url_for('about/') %>" itemprop="author"><%- config.author %></a></span>
        <span>
          <time itemprop="timeCreated" aria-hidden="true"><%- moment(page.date).format('YYYY-MM-DD HH:mm:ss') %></time>
          <span class="aria-readonly">本文发布时间为<%- moment(page.date).format('YYYY年MM月DD日HH时mm分ss秒') %></span>
        </span>
        <span>分类: <%- partial('post/category', {post: page}) %></span>
        <span tabindex="0" aria-hidden="true">标签: <%- partial('post/tag', {post: page}) %></span>
        <span class="aria-readonly">下面是正文内容</span>
        <span tabindex="0" aria-hidden="true">评论数: <a href="#comments"
                      class="ds-thread-count hash-to-comments disqus-comment-count"
                      data-thread-key="<%- page.slug || page.path %>"
                      data-disqus-identifier="<%- page.slug || page.path %>"></a></span>
        <span tabindex="0" aria-hidden="true" id="busuanzi_container_site_pv">热度: <span id="busuanzi_value_page_pv"></span></span>
      </div>
      <div class="post-content" itemprop="articleBody">
        <div class="shit-spider" title="防爬虫不注明出处" tabindex="0" aria-hidden="true">
          <p>原文地址：<a href="<%- config.url %><%- url_for(page.path) %>"><%- config.url %><%- url_for(page.path) %></a>，<a href="<%- config.url %><%- url_for(page.path) %>#comments">参与评论</a></p>
          <img src="//www.barretlee.com/blogimgs/avatar150.png">
        </div>
        <%- page.content %>
        <!--<p class="article-info">文/<a href="<%- url_for('about/') %>"><img src="/avatar150.png">李靖</a>　微信公众号：barretlee_com</p><p class="this-page-link" aria-hidden="true">本文链接：<a href="<%- config.url %><%- url_for(page.path) %>"><%- config.url %><%- url_for(page.path) %></a></p>
        <p><a class="to-comments" href="<%- config.url %><%- url_for(page.path) %>#comments" aria-hidden="true">☞ 参与评论</a></p> -->
      </div>
    </div>
    <%- partial('post/warning') %>
    <div class="share-article clearfix">
      <%var excerpt = page.excerpt.replace(/<[^>]+?>|\n/gm, '') || page.content.replace(/<[^>]+?>|\n/gm, '').slice(0, 110) + "...";%>
      <div class="ds-share" data-thread-key="<%- page.slug || page.path %>" data-title="<%= page.title %>" data-images="<%- post.images %>" data-content="<%- excerpt %>" data-url="<%- config.url %><%- url_for(page.path) %>">
        <%- partial('post/duoshuoShare') %>
      </div>
    </div>
    <div class="secretCircle">
      <a href="https://wx.xiaomiquan.com/mweb/views/joingroup/join_group.html?group_id=4512888248&secret=pqswxhb8fni6t9imw1j9ewb77hv5ks70&extra=afbdcd6a4cee551edc3b9a2cff7cedb2410e735bd4119ff43bd8975088283608" target="_blank"><img src="/circle.jpg" alt="前端进阶小圈子"></a>
